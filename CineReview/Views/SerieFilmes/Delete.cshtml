@model CineReview.Models.DTOs.SerieFilmeDto
@{
    ViewData["Title"] = "Excluir";
}
<h1>Confirmar exclusão</h1>
<h4>@Model.Titulo</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>
        <dt class="col-sm-2">Gênero</dt>
        <dd class="col-sm-10">@Model.Genero</dd>
        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Tipo</dd>
        <dt class="col-sm-2">Imagem</dt>
        <dd class="col-sm-10">
            @if(!string.IsNullOrWhiteSpace(Model.ImagemURL)) {
                <div><img src="@Model.ImagemURL" alt="@Model.Titulo" style="max-height:150px;object-fit:cover;" class="border p-1" /></div>
                <div class="small text-muted">@Model.ImagemURL</div>
            } else {
                <span class="text-muted">Sem imagem</span>
            }
        </dd>
    </dl>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
