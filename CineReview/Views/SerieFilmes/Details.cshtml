@model CineReview.Models.SerieFilmeModel
@{
    ViewData["Title"] = "Detalhes";
}
<h1>Detalhes</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>
        <dt class="col-sm-2">Gênero</dt>
        <dd class="col-sm-10">@Model.Genero</dd>
        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Tipo</dd>
    </dl>
</div>
<p>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</p>

